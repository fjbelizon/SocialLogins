@model Social.Logins.Web.Models.ProfileViewModel
@{
    ViewBag.Title = "Data profile";
}

<div class="row">
    <div class="col-md-12">
        <h2>@Model.Name</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Claim</th>
                    <th scope="col">Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model.Claims)
                {
                    <tr>
                        <td>@claim.Type</td>
                        <td>@claim.Value</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>